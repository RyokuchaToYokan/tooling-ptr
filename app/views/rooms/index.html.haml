.wrapper
  = render "tops/side_bar"
  = render "tops/head-bar"
  .main
    .main__left
      .main__head
        .main--title
          お悩み相談室
        .search-box
          .input
            search
          .btn
            検索
      .create__room
        .create__room--btn
          = link_to "相談室を新規作成する", new_room_path, class: "plus--btn"
      .qanda__rooms
        .rooms--title
          相談室一覧（新着順）
        .rooms__boxes
          %ul
            - @rooms.each do |room|
              .rooms__list
                %li
                = link_to "#", class: "qanda__room" do
                  %span.qanda__room--name
                    Q : #{room.name}
                  %span.qanda__room--message
                    現在搭載中
              


    .main__right
      .qanda--history
        .history--title
          あなたの相談履歴
        .history--boxes
          %ul
            - if user_signed_in? && current_user.id == @room.user_id
              - current_user.rooms.each do |room|
                .history__list
                  %li
                  = link_to "#", class: "qanda--history__room" do
                    %span.qanda--history__room-name
                      Q : #{room.name}
                    %span.qanda--history__room-message
                      今日ツーリングへ行くのですが、天気予報ではどうやら
