.head
  .head__left
    = link_to "Tooling Partner", root_path, class: "head_left", data: {"turbolinks": false}
  = form_with(url: search_posts_path, local: true, method: :get, class: "head__center") do |form|
    = form.text_field :keyword, placeholder: "投稿を検索する（相談室を除く）", class: "head__center__input"
    = form.submit "検索", class: "head__center__btn", data: {"turbolinks": false}
  .head__right
    - if user_signed_in?
      = link_to "ログアウト", destroy_user_session_path, method: :delete, data: {"turbolinks": false}
    - else
      = link_to "ログイン", new_user_session_path, class: 'post', data: {"turbolinks": false}
