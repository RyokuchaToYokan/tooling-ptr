.wrapper
  = render "tops/side_bar"
  = render "tops/head-bar"
  .main
    .main__left
      .main__head
        .main--title{ id: "#{@parent.name}" }
          #{@parent.name}の一覧
      .qanda__rooms
        .children__boxes
          - @children.each do |child|
            .grandchild__box
              = link_to child.name, "##{child.id}", class: "grandchild--title"
      .divid

      .qanda__rooms
        .parent__box
          - @children.each do |child|
            .jump--point{ id: "#{child.id}" }
              .parent--title
                = child.name
              .children__boxes
                .grandchild__box
                  - child.children.each do |grandchild|
                    .grandchild--list
                      = link_to grandchild.name, "/categories/#{grandchild.id}", class: "grandchild--title"               
              .return--top
                = link_to "トップページへ戻る", "#", class: "up--arrow"
      

    .main__right
      = render "rooms/qanda_history"